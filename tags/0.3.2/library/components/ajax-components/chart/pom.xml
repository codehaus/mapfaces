	    <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xslt-maven-plugin</artifactId>
                <version>1.0</version>
                <configuration>
                    <xslFile>../base/src/main/tld/misc/resolve_entities.xsl</xslFile>
                    <srcIncludes>**/*.tld</srcIncludes>
                    <srcDir>src/main/tld</srcDir>
