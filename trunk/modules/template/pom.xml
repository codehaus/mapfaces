<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <groupId>org.mapfaces</groupId>
        <artifactId>mapfaces-modules</artifactId>
        <version>0.2-SNAPSHOT</version>
    </parent>
    
    
    <!-- =========================================================== -->
    <!--     Module Description                                      -->
    <!-- =========================================================== -->
    <groupId>org.mapfaces</groupId>
    <artifactId>mapfaces-template</artifactId>
    <packaging>war</packaging>
    <name>MapFaces Template MochaUI</name>

    <scm>
        <connection>scm:svn:http://svn.codehaus.org/mapfaces/trunk/modules/template/</connection>
        <url>http://svn.codehaus.org/mapfaces/trunk/modules/template/</url>
    </scm>
 
    <description>MapFaces webapp template for jsf and MochaUI.</description>
    
    
    <!-- =========================================================== -->
    <!--     Developers and contributors.                            -->
    <!-- =========================================================== -->
    <developers>
        <developer>
            <id>mediii</id>
            <name>Mehdi Sidhoum</name>
            <email>mehdi.sidhoum@geomatys.fr</email>
            <organization>Geomatys</organization>
            <organizationUrl>http://www.geomatys.fr/</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>
    
    
  <!-- =========================================================== -->
  <!--     Dependency Management                                   -->
  <!-- =========================================================== -->
    <dependencies>

        <!-- Mapfaces library -->
        <dependency>
            <groupId>org.mapfaces</groupId>
            <artifactId>mapfaces-main</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- JSP, Servlet ,JSTL -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet.jsp</groupId>
            <artifactId>jsp-api</artifactId>
            <scope>provided</scope>
        </dependency>

    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>net.sf.alchim</groupId>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
		<!-- for more details see http://alchim.sourceforge.net/yuicompressor-maven-plugin/compress-mojo.html -->
                    <nosuffix>true</nosuffix>
                    <force>true</force>
                    <jswarn>false</jswarn>
                    <aggregations>
                        <aggregation>
                            <output>${project.build.directory}/${project.build.finalName}/resources/js/all.js</output>
                            <includes>
				<!--include>${basedir}/src/licenses/license.js</include-->
                                <include>**/mootools-1.2-core.js</include>
                                <include>**/mootools-1.2-more.js</include>
                                <include>**/mocha.js</include>
                                <include>**/mocha-init.js</include>
                                <include>**/start.js</include>
                                <include>**/browserdetect.js</include>
                            </includes>
                            <excludes>
                                <exclude>**/excanvas-compressed.js</exclude>
                            </excludes>
                        </aggregation>
                        <aggregation>
                            <output>${project.build.directory}/${project.build.finalName}/resources/css/all.css</output>
                            <includes>
                                <include>**/content.css</include>
                                <include>**/ui.css</include>
                            </includes>
                        </aggregation>
<!-- Only for NetBeans devs who doesn't use Maven plugin -->
                        <aggregation>
                            <output>${project.build.sourceDirectory}/../webapp/resources/js/all.js</output>
                            <includes>
                                <include>**/mootools-1.2-core.js</include>
                                <include>**/mootools-1.2-more.js</include>
                                <include>**/mocha.js</include>
                                <include>**/mocha-init.js</include>
                                <include>**/start.js</include>
                                <include>**/browserdetect.js</include>
                            </includes>
                            <excludes>
                                <exclude>**/excanvas-compressed.js</exclude>
                            </excludes>
                        </aggregation>
                        <aggregation>
                            <output>${project.build.sourceDirectory}/../webapp/resources/css/all.css</output>
                            <includes>
                                <include>**/content.css</include>
                                <include>**/ui.css</include>
                            </includes>
                        </aggregation>
                    </aggregations>
                </configuration>
            </plugin>

<!-- rename the war file -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <warName>mf-template</warName>
                </configuration>
            </plugin>

        </plugins>
    </build>
    
</project>
