<?xml version="1.0" encoding="UTF-8"?>
<OWSContext version="0.3.0" id="ows-context-ex-1-v3" xmlns="http://www.opengis.net/ows-context" xmlns:gml="http://www.opengis.net/gml" xmlns:kml="http://www.opengis.net/kml/2.2" xmlns:ogc="http://www.opengis.net/ogc" xmlns:ows="http://www.opengis.net/ows" xmlns:sld="http://www.opengis.net/sld" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.opengis.net/ows-context http://www.ogcnetwork.net/schemas/owc/0.3.0/owsContext.xsd">
	<General>                
		<Window width="1000" height="500"/>
		<ows:BoundingBox crs="EPSG:4326">                        
			<ows:LowerCorner>-45 142</ows:LowerCorner>
			<ows:UpperCorner>-38 150</ows:UpperCorner>
		</ows:BoundingBox>
		<ows:Title>OWS Context version 0.3.0 tasmania WFS example</ows:Title>
		<ows:Abstract>Works for all WMS spec and only for WFS 1.0.0</ows:Abstract>
	</General>
	
	<ResourceList>
		
		<!-- WMS Example -->
                <Layer name="BlueMarble" queryable="1" hidden="0">                        
			<ows:Title>Blue Marble</ows:Title>
			<ows:OutputFormat>image/png</ows:OutputFormat>
			<Server service="urn:ogc:serviceType:WMS" version="1.1.1">
                                <OnlineResource xlink:type="simple" xlink:href="http://localhost:8080/constellation/WS/wms"/>
			</Server>                    
		</Layer> 
                <Layer name="topp:tasmania_state_boundaries" queryable="1" hidden="0" opacity="0.5">
			<ows:Title>Tasmania boundaries</ows:Title>
			<ows:OutputFormat>image/png</ows:OutputFormat>
			<Server service="urn:ogc:serviceType:WFS" version="1.0.0">
				<OnlineResource xlink:href="http://demo.geomatys.fr/geoserver/wfs"/>
			</Server>
                        <StyleList>
                            <Style> 
                                <Name></Name>
                                <Title></Title>
                            </Style>
                            <Style > 
                                <Name>world</Name>
                                <Title>world style</Title>
                            </Style>
                            <Style current="1"> 
                                <SLD>
                                     <OnlineResource xlink:href="http://demo.geomatys.fr/geoserver/data/styles/green.sld"/> 
                                </SLD>
                            </Style>
                            <Style > 
                                <SLD>
                                    <StyledLayerDescriptor version="1.0.0" xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd" xmlns="http://www.opengis.net/sld"  xmlns:ogc="http://www.opengis.net/ogc" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                                      <NamedLayer>
                                        <Name>topp:tasmania_water_bodies</Name>
                                        <UserStyle>
                                          <Name>water_bodies</Name>
                                          <FeatureTypeStyle>
                                            <Rule>
                                              <Name>R</Name>
                                              <PolygonSymbolizer>                                                  
                                               <Fill>
                                                  <CssParameter name="fill">#ff0012</CssParameter>
                                                  <CssParameter name="stroke-width">3</CssParameter>
                                                </Fill>
                                               <Stroke>
                                                  <CssParameter name="stroke">#12BB0f</CssParameter>
                                                  <CssParameter name="stroke-width">1</CssParameter>
                                                </Stroke>
                                              </PolygonSymbolizer>
                                            </Rule>
                                            </FeatureTypeStyle>
                                        </UserStyle>
                                      </NamedLayer>
                                    </StyledLayerDescriptor>
                                </SLD>
                            </Style>
                        </StyleList>  
		</Layer>
		<Layer name="topp:tasmania_water_bodies" queryable="1" hidden="0">
			<ows:Title>Tasmania_water_bodies</ows:Title>
			<ows:OutputFormat>image/png</ows:OutputFormat>
			<Server service="urn:ogc:serviceType:WFS" version="1.0.0">
				<OnlineResource xlink:href="http://demo.geomatys.fr/geoserver/wfs"/>
			</Server>
                        <StyleList>
                            <Style> 
                                <Name></Name>
                                <Title></Title>
                            </Style>
                            <Style> 
                                <Name>world</Name>
                                <Title>world style</Title>
                            </Style>
                            <Style > 
                                <SLD>
                                     <OnlineResource xlink:href="http://demo.geomatys.fr/geoserver/data/styles/green.sld"/> 
                                </SLD>
                            </Style>
                            <Style current="1"> 
                                <SLD>
                                    <StyledLayerDescriptor version="1.0.0" xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd" xmlns="http://www.opengis.net/sld"  xmlns:ogc="http://www.opengis.net/ogc" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                                      <NamedLayer>
                                        <Name>topp:tasmania_water_bodies</Name>
                                        <UserStyle>
                                          <Name>water_bodies</Name>
                                          <FeatureTypeStyle>
                                            <Rule>
                                              <Name>R</Name>
                                              <PolygonSymbolizer>                                                  
                                               <Fill>
                                                  <CssParameter name="fill">#ff0000</CssParameter>
                                                  <CssParameter name="stroke-width">3</CssParameter>
                                                </Fill>
                                               <Stroke>
                                                  <CssParameter name="stroke">#1200ff</CssParameter>
                                                  <CssParameter name="stroke-width">1</CssParameter>
                                                </Stroke>
                                              </PolygonSymbolizer>
                                            </Rule>
                                            </FeatureTypeStyle>
                                        </UserStyle>
                                      </NamedLayer>
                                    </StyledLayerDescriptor>
                                </SLD>
                            </Style>
                        </StyleList>  
		</Layer>
              <Layer name="topp:tasmania_roads" queryable="1" hidden="0">
			<ows:Title>Tasmania_roads</ows:Title>
			<ows:OutputFormat>image/png</ows:OutputFormat>
			<Server service="urn:ogc:serviceType:WFS" version="1.0.0">
				<OnlineResource xlink:href="http://demo.geomatys.fr/geoserver/wfs"/>
			</Server>
                        <StyleList>
                            <Style> 
                                <Name></Name>
                                <Title></Title>
                            </Style>
                            <Style> 
                                <Name>green</Name>
                                <Title>Green style</Title>
                            </Style>
                            <Style> 
                                <SLD>
                                     <OnlineResource xlink:href="http://demo.geomatys.fr/geoserver/data/styles/green.sld"/> 
                                </SLD>
                            </Style>
                            <Style current="1"> 
                                <SLD>
                                    <StyledLayerDescriptor version="1.0.0" xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd" xmlns="http://www.opengis.net/sld"  xmlns:ogc="http://www.opengis.net/ogc" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                                      <NamedLayer>
                                        <Name>topp:tasmania_roads</Name>
                                        <UserStyle>
                                          <FeatureTypeStyle>
                                            <Rule>
                                              <Name>R</Name>
                                              <LineSymbolizer>
                                                <Stroke>
                                                  <CssParameter name="stroke">#00abff</CssParameter>
                                                  <CssParameter name="stroke-width">2</CssParameter>
                                                </Stroke>
                                              </LineSymbolizer>
                                            </Rule>
                                            </FeatureTypeStyle>
                                        </UserStyle>
                                      </NamedLayer>
                                    </StyledLayerDescriptor>
                                </SLD>
                            </Style>
                        </StyleList>   
		</Layer>
                <Layer name="topp:tasmania_cities" queryable="1" hidden="0">
			<ows:Title>Tasmania_cities</ows:Title>
			<ows:OutputFormat>image/png</ows:OutputFormat>
			<Server service="urn:ogc:serviceType:WFS" version="1.0.0">
				<OnlineResource xlink:href="http://demo.geomatys.fr/geoserver/wfs"/>
			</Server>
                        <StyleList>
                             <Style> 
                                <Name></Name>
                                <Title></Title>
                            </Style>
                            <Style> 
                                <Name>capitals</Name>
                                <Title>capitals style</Title>
                            </Style>
                            <Style> 
                                <SLD>
                                     <OnlineResource xlink:href="http://demo.geomatys.fr/geoserver/data/styles/tasmania_cities.sld"/> 
                                </SLD>
                            </Style>
                             <Style  current="1"> 
                                <SLD>
                                    <StyledLayerDescriptor version="1.0.0" xmlns="http://www.opengis.net/sld" xmlns:ogc="http://www.opengis.net/ogc" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                                        <NamedLayer>
                                            <Name>topp:tasmania_cities</Name>
                                            <UserStyle>
                                                <Name>cities</Name>
                                                <FeatureTypeStyle>
                                                    <Rule>
                                                        <Name>R</Name>
                                                        <PointSymbolizer>
                                                            <Graphic>
                                                                <wellknownname>circle</wellknownname>
                                                                <Mark>
                                                                    <Fill>
                                                                        <CssParameter name="fill">#121112</CssParameter>
                                                                    </Fill>                                                                    
                                                                    <Stroke>
                                                                      <CssParameter name="stroke">#00abff</CssParameter>
                                                                      <CssParameter name="stroke-width">1</CssParameter>
                                                                    </Stroke>
                                                                </Mark>
                                                                <Size>11</Size>
                                                            </Graphic>
                                                        </PointSymbolizer>                                                        
                                                    </Rule>
                                                 </FeatureTypeStyle>
                                             </UserStyle>
                                        </NamedLayer>
                                    </StyledLayerDescriptor>
                                </SLD>                                
                            </Style>
                        </StyleList>  
		</Layer>
	</ResourceList>
</OWSContext>
