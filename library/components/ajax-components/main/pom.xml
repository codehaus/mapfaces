<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mapfaces</groupId>
        <artifactId>mapfaces-components-ajax</artifactId>
        <version>0.2-SNAPSHOT</version>
    </parent>
	<!-- =========================================================== -->
	<!--     Module Description                                      -->
	<!-- =========================================================== -->
    <groupId>org.mapfaces</groupId>
    <artifactId>mapfaces-main</artifactId>
    <packaging>jar</packaging>
    <name>Mapfaces - Main module</name>
	<!-- =========================================================== -->
	<!--     Developers and Contributors                             -->
	<!-- =========================================================== -->
	<!-- =========================================================== -->
	<!--     Dependency Management                                   -->
	<!-- =========================================================== -->
    <dependencies>

        <dependency>
            <groupId>org.mapfaces</groupId>
            <artifactId>mapfaces-chart</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.mapfaces</groupId>
            <artifactId>mapfaces-map</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.mapfaces</groupId>
            <artifactId>mapfaces-widgets</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.mapfaces</groupId>
            <artifactId>mapfaces-comet</artifactId>
            <version>${project.version}</version>
        </dependency>
        
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

        </plugins>
    </build>
    <properties>
        <netbeans.hint.deploy.server>Tomcat60</netbeans.hint.deploy.server>
    </properties>
    <description>All MapFaces modules.</description>
</project>

